@{
    ViewData["Title"] = "Home";
}

<div class="d-flex flex-column justify-content-center align-items-center h-100" style="min-height: 60vh;">

    <div class="mb-4 text-center">
        <i class="fa-solid fa-book-open" style="font-size: 5rem; color: #2c5364;"></i>
    </div>

    <h1 class="display-3 fw-bold text-center mb-2" style="background: linear-gradient(135deg, #0f2027, #2c5364); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
        Welcome To Salary Book
    </h1>

    <p class="lead text-muted text-center" style="font-size: 1.2rem;">
        Premium Salary Management System
    </p>

    <div class="mt-5 d-flex gap-3">
        <a asp-controller="Entry" asp-action="Index" class="btn btn-primary btn-lg px-4 shadow-sm" style="background: #2c5364; border:none;">
            <i class="fa-solid fa-pen-to-square me-2"></i> Start Entry
        </a>
        <a asp-controller="Report" asp-action="Index" class="btn btn-outline-dark btn-lg px-4 shadow-sm">
            <i class="fa-solid fa-chart-line me-2"></i> View Reports
        </a>
    </div>

</div>