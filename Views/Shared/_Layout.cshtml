<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Salary Book</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <style>
        :root {
            --primary-gradient: linear-gradient(135deg, #0f2027 0%, #203a43 50%, #2c5364 100%); /* Premium Dark Blue/Teal */
            --accent-color: #ffc107; /* Gold accent */
            --bg-color: #f4f7f6; /* Soft Grey Background */
            --text-color: #333;
            --nav-hover: rgba(255, 255, 255, 0.15);
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: var(--bg-color);
            color: var(--text-color);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        /* --- HEADER & NAVBAR --- */
        header {
            box-shadow: 0 4px 20px rgba(0,0,0,0.15);
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        .navbar {
            background: var(--primary-gradient);
            padding: 0.8rem 1rem;
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.5rem;
            color: #fff !important;
            letter-spacing: 1px;
            text-transform: uppercase;
        }

            .navbar-brand i {
                color: var(--accent-color);
                margin-right: 8px;
            }

        .nav-item {
            margin: 0 5px;
        }

        .nav-link {
            color: rgba(255, 255, 255, 0.85) !important;
            font-weight: 500;
            font-size: 0.95rem;
            border-radius: 8px;
            padding: 8px 15px !important;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 8px;
        }

            .nav-link i {
                font-size: 1.1rem;
                transition: transform 0.3s;
            }

            /* Hover & Active States */
            .nav-link:hover, .nav-link.active {
                background-color: var(--nav-hover);
                color: #fff !important;
                transform: translateY(-2px);
                box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            }

                .nav-link:hover i {
                    transform: scale(1.2);
                    color: var(--accent-color);
                }

        /* --- MAIN CONTENT CONTAINER --- */
        .main-container {
            flex: 1;
            margin-top: 30px;
            margin-bottom: 30px;
        }

        .content-card {
            background: #fff;
            border-radius: 16px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.05);
            padding: 30px;
            min-height: 80vh;
            border: 1px solid rgba(0,0,0,0.02);
            animation: fadeIn 0.5s ease-in-out;
        }

        /* --- ANIMATION --- */
        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }



        /* --- FOOTER --- */
        footer {
            background: #fff;
            padding: 15px 0;
            text-align: center;
            border-top: 1px solid #eee;
            color: #777;
            font-size: 0.9rem;
            margin-top: auto;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fa-solid fa-book-open"></i> Galaxy Book
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse justify-content-end">
                    <ul class="navbar-nav">

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Entry" asp-action="Index">
                                <i class="fa-solid fa-pen-to-square"></i> Data Entry
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Rate" asp-action="Index">
                                <i class="fa-solid fa-tags"></i> Rates
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Report" asp-action="Index">
                                <i class="fa-solid fa-chart-line"></i> Reports
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Employee" asp-action="Index">
                                <i class="fa-solid fa-users"></i> Employees
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Settings" asp-action="Index">
                                <i class="fa-solid fa-gear"></i> Settings
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Backup" asp-action="Index">
                                <i class="fa-solid fa-cloud-arrow-up"></i> Backup
                            </a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container main-container">
        <div class="content-card">
            @RenderBody()
        </div>
    </div>

    <footer>
        <div class="container">
            &copy; @DateTime.Now.Year - <strong>Galaxy Book</strong> - Premium Salary Management
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>